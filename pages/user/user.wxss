.user {

}

.user .header {
    padding: 50rpx 30rpx;
    background-color: #fff;
    text-align: center;
}

.user .header .avatar {
    display: block;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin: 0 auto 20rpx;
}

.user .header .icon-caidan08 {
    font-size: 150rpx;
    margin-bottom: 20rpx;
}

.user .header .username {
    
}

.user .container {
    
}

.user .container .list {
}

.user .container .list .item {
    padding: 0 30rpx;
    background-color: #fff;
}

.user .container .list .item:nth-child(2n+2) {
    margin-bottom: 20rpx;
}

.user .container .list .item .item-wrapper {
    padding: 30rpx 0;
    border-bottom: 1px solid #f5f5f5;
}

.user .container .list .item .item-wrapper .icon-image {
    margin-right: 20rpx;
}

.user .container .list .item .item-wrapper .label {
    font-size: var(--fontSizeOne);
}

.user .container .list .item .item-wrapper .balance {
    margin-right: 10rpx;
    font-size: var(--fontSizeOne);
}

.user .container .list .item .item-wrapper .icon-image,
.user .container .list .item .item-wrapper .icon-enter {
    font-size: 36rpx;
}