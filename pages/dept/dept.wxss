.dept {

}

.dept .header {
    padding: 30rpx;
}

.header .search {
    height: 40rpx;
    padding: 20rpx 30rpx;
    border: 1px solid #ccc;
    background-color: #fff;
    border-radius: 10rpx;
}

.search .icon-search {
    margin-right: 10rpx;
    font-size: 36rpx;
    color: #aaa;
}

.search .txt {
    font-size: 30rpx;
    color: #aaa;
}

.dept .container {
    padding: 30rpx;
}

.container .dept-list {
    padding: 0 30rpx;
    border-radius: 10rpx;
    background-color: #fff;
}

.dept-list .item {
    justify-content: space-between;
    padding: 30rpx 0;
    border-bottom: 1px solid #f5f5f5;
}

.dept-list .item .name {
    font-size: 30rpx;
}

.dept-list .item .icon-enter {
    font-size: 36rpx;
    color: #666;
}
