.location {
}

.header {
    padding: 20rpx 30rpx;
    border-top: 1px solid #f5f5f5;
    background-color: #fff;
}

.search {
    padding: 10rpx 30rpx;
    background-color: var(--bgColor);
}

.search .icon-search {
    margin-right: 10rpx;
    font-size: 38rpx;
    color: var(--colorOne);
}

.search .input {
    font-size: var(--fontSizeOne);
}

.placeholder {
    font-size: var(--fontSizeOne);
}

.container {
    
}

.city-wrapper {
}

.current-city {
    padding: 0 30rpx;
    font-size: var(--fontSizeOne);
    background-color: #f5f5f5;
}

.current-city .label {
    padding: 20rpx 0;
    color: var(--colorOne);
}

.current-city .city {
    display: inline-block;
    padding: 20rpx 40rpx;
    background-color: #fff;
}

.city-list {
    height: 100%;
    font-size: var(--fontSizeOne);
}

.city-list .initial {
    padding: 20rpx 30rpx;
    color: var(--colorOne);
    background-color: #f5f5f5;
}

.city-list .city {
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #f5f5f5;
    background-color: #fff;
}

.hover-class1 {
    color: rgba(0, 0, 0, 0.6);
}

.initial-list {
    position: fixed;
    right: 0;
    padding: 20rpx 0 0;
    background-color: #f5f5f5;
}

.initial-list .initial {
    padding: 6rpx 5rpx;
    font-size: 24rpx;
    color: var(--linkColor);
    text-align: center;
}

.hover-class2 {
    color: rgba(70, 145, 214, 0.6) !important;
}

.no-data {
    height: 100%;
    text-align: center;
    line-height: 30;
}