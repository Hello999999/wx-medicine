/* 医生列表 start */
.doctor-list {
    padding: 0 30rpx;
    background-color: #fff;
}

.doctor-list .doctor-item {
    padding: 30rpx 0;
    border-bottom: 1px solid #f5f5f5;
}

.doctor-list .doctor-item .avatar {
    display: block;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.doctor-list .doctor-item .info {
    font-size: 32rpx;
    color: #666;
}

.doctor-list .doctor-item .info .row:first-child {
    margin-bottom: 10rpx;
}

.doctor-list .doctor-item .info .row .col {
    margin-right: 20rpx;
}

.doctor-list .doctor-item .info .row .col.name {
    font-size: 36rpx;
    color: #000;
}

.doctor-list .doctor-item  .icon-enter {
    color: #666;
}
/* 医生列表 end */