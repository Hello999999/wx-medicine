/* 医院列表 start */
.hosp-list {
    padding: 0 30rpx;
    background-color: #fff;
}

.hosp-list .hosp-item {
    padding: 40rpx 0;
    border-bottom: 1px solid #f5f5f5;
}

.hosp-list .hosp-item .logo {
    display: block;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.hosp-list .hosp-item .info {
}

.hosp-list .hosp-item .info .name {
    
}

.hosp-list .hosp-item .info .name .tag {
    margin-right: 20rpx;
    padding: 10rpx;
    background-color: #00bbff;
    font-size: 22rpx;
    color: #fff;
}

.hosp-list .hosp-item .info .name .txt {
    font-size: 38rpx;
}

.hosp-list .hosp-item .info .desc,
.hosp-list .hosp-item .info .address {
    margin-top: 10rpx;
    font-size: 32rpx;
    color: #666;
}

.hosp-list .hosp-item .info .address {

}
/* 医院列表 end */

